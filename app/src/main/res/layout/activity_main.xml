<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
        android:id="@+id/arfragmentmainpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </fragment>


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AR Zone"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_margin="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"

        >

        <RelativeLayout
            android:id="@+id/layer1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="30dp"
                    android:alpha="0.4"
                    android:onClick="callIntent1"

                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="30dp"
                    android:alpha="0.4"
                    android:onClick="callIntent2"

                    >

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imageicon1"
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:src="@drawable/network"
                        />

                    <TextView
                        android:id="@+id/texticon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text="Object Placer"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imageicon2"
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:src="@drawable/network"
                        />

                    <TextView
                        android:id="@+id/texticon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text="Face Filter"
                        />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer2"
            android:layout_below="@+id/layer1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="30dp"
                    android:alpha="0.4"
                    android:onClick="callIntent3"

                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="30dp"
                    android:alpha="0.4"
                    android:onClick="callIntent4"

                    >

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imageicon3"
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:src="@drawable/network"
                        />

                    <TextView
                        android:id="@+id/texticon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text="Doodler"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imageicon4"
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:src="@drawable/network"
                        />

                    <TextView
                        android:id="@+id/texticon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text="Fun Mode"
                        />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer3"
            android:layout_below="@+id/layer2"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="30dp"
                    android:alpha="0.4"

                    >

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imageicon5"
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:src="@drawable/network"
                        />

                    <TextView
                        android:id="@+id/texticon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text="Extra"
                        />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>